#
# Bug #28500: Falcon: searches fail if unique prefixed Turkish index
# Note: This bug is not related to a Turkish index. The underlying problem is
#   that a partial unique index violation is not detected.
#   Therefore, the test was simplified to show the real problem.
#
--echo *** Bug #28500 ***

# ----------------------------------------------------- #
# --- Initialisation                                --- #
# ----------------------------------------------------- #
let $engine = 'Falcon';
eval SET @@storage_engine = $engine;

--disable_warnings
DROP TABLE IF EXISTS t1;
--enable_warnings

CREATE TABLE t1 (a varchar(5));
CREATE UNIQUE INDEX i1 on t1 (a(4));
INSERT INTO t1 VALUES ('1234');

# ----------------------------------------------------- #
# --- Test                                          --- #
# ----------------------------------------------------- #
--error ER_DUP_ENTRY
INSERT INTO t1 VALUES ('12345');

# ----------------------------------------------------- #
# --- Check                                         --- #
# ----------------------------------------------------- #
SELECT count(*) FROM t1;

# ----------------------------------------------------- #
# --- Final cleanup                                 --- #
# ----------------------------------------------------- #
DROP TABLE t1;
SET NAMES default;
