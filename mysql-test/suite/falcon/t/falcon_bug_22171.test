--source include/have_falcon.inc
SET STORAGE_ENGINE='Falcon';
#
# Bug #22171: Can't use decimal data type with more than 19 digits
#
--echo *** Bug #22171 ***
--disable_warnings
DROP TABLE IF EXISTS t1;
--enable_warnings

CREATE TABLE t1 (
  a decimal(20),
  KEY (a)
);
INSERT INTO t1 VALUES (12345678901234567890);
SELECT * FROM t1 WHERE a = 12345678901234567890;

# Final cleanup.
DROP TABLE t1;
