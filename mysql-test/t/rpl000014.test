source include/master-slave.inc;
connection master;
show master status;
connection slave;
sleep 0.2;
show slave status;
change master to master_log_pos=73;
sleep 0.2;
slave stop;
change master to master_log_pos=73;
show slave status;
slave start;
show slave status;
change master to master_log_pos=173;
show slave status;
connection master;
show master status;
drop table if exists foo;
create table foo (n int);
insert into foo values (1),(2),(3);
connection slave;
change master to master_log_pos=73;
sleep 2;
select * from foo;
connection master;
drop table foo;
