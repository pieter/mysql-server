--source include/have_falcon.inc
#
# Bug #29201: decimal(20, 20) has rounding error
#
--echo *** Bug #29201 ***

# ----------------------------------------------------- #
# --- Initialisation                                --- #
# ----------------------------------------------------- #
let $engine = 'Falcon';
eval SET @@storage_engine = $engine;

--disable_warnings
DROP TABLE IF EXISTS t1;
--enable_warnings

CREATE TABLE t1 (
  a decimal(20, 20),
  b decimal(65, 30)
);
INSERT INTO t1 (a) VALUES (0.123456789012345678901234567890);
INSERT INTO t1 (a) VALUES (0.123456789);

INSERT INTO t1 (b) VALUES (0.123456789012345678901234567890);
INSERT INTO t1 (b) VALUES (0.123456789);

# ----------------------------------------------------- #
# --- Test                                          --- #
# ----------------------------------------------------- #
SELECT a FROM t1 ORDER BY a;
SELECT b FROM t1 ORDER BY b;

# ----------------------------------------------------- #
# --- Check                                         --- #
# ----------------------------------------------------- #
SELECT count(*) FROM t1;

# ----------------------------------------------------- #
# --- Final cleanup                                 --- #
# ----------------------------------------------------- #
DROP TABLE t1;
