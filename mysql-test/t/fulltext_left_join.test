CREATE TABLE t1 (
       id           VARCHAR(255) NOT NULL PRIMARY KEY,
       sujet        VARCHAR(255),
       motsclefs    TEXT,
       texte        MEDIUMTEXT,
       FULLTEXT(sujet, motsclefs, texte)
);
