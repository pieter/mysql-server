#
# Bug #5382: 'explain select into outfile' crashes the server
#

CREATE TABLE t1 (a INT);
EXPLAIN 
  SELECT *
  INTO OUTFILE '/tmp/t1.txt'
  FIELDS TERMINATED BY ',' OPTIONALLY ENCLOSED BY '"' LINES TERMINATED BY '\r\n'
  FROM t1;
DROP TABLE t1;

